<?xml version="1.0"?>
<sdf version="1.7">
  <model name="CrossPrismatic2D">
    <!-- This sdf file produces a model of a
    non-actuated body of a negligible point
    mass sliding along the x- and y- axis on 
    two prismatic joints. It visually renders 
    a cross to show a target. -->
    <link name="cross">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass>0.001</mass>
      </inertial>
      <visual name="visual">
        <pose>0 0 0 0 0 0.7854</pose>
        <geometry>
          <box>
            <size>0.1 0.03 0.005</size>
          </box>
        </geometry>
        <material>
          <diffuse>0.9 0.1 0.1 1</diffuse>
        </material>
      </visual>
      <visual name="visual2">
        <pose>0 0 0 0 0 -0.7854</pose>
        <geometry>
          <box>
            <size>0.1 0.03 0.005</size>
          </box>
        </geometry>
        <material>
          <diffuse>0.9 0.1 0.1 1</diffuse>
        </material>
      </visual>
    </link>
    <link name='glue_sliderX_sliderY'>
      <pose relative_to='cross'>0 0.0 0 0 0 0</pose>
      <inertial>
        <mass>0.0001</mass>
      </inertial>
    </link>  
    <joint name='Cross_Slider_x' type='prismatic'>
      <parent>world</parent>
      <child>glue_sliderX_sliderY</child>
      <axis>
        <xyz>1.0 0.0 0.0</xyz>
      <limit>
        <!-- This joint is not actuated. -->
        <effort>0</effort>
      </limit>
      </axis>
    </joint>
    <joint name='Cross_Slider_y' type='prismatic'>
      <parent>glue_sliderX_sliderY</parent>
      <child>cross</child>
      <axis>
        <xyz>0.0 1.0 0.0</xyz>
      <limit>
        <!-- This joint is not actuated. -->
        <effort>0</effort>
      </limit>
      </axis>
    </joint>
  </model>
</sdf>
